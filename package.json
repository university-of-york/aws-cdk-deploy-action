{
    "name": "@university-of-york/aws-cdk-deploy-action",
    "version": "1.1.3",
    "description": "This action deploys AWS CDK Stacks through yaml files.",
    "keywords": [],
    "homepage": "https://github.com/university-of-york/aws-cdk-deploy-action#readme",
    "bugs": {
        "url": "https://github.com/university-of-york/aws-cdk-deploy-action/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/university-of-york/aws-cdk-deploy-action.git"
    },
    "license": "MIT",
    "author": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "ncc build index.js",
        "lint": "lint-staged",
        "semantic-release": "semantic-release",
        "tag-as-major": "node ./scripts/tag-last-as-major.js",
        "test": "jest --runInBand"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm t && npm run lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "xo": {
        "extends": [
            "prettier"
        ],
        "overrides": [
            {
                "files": "**/*.test.js",
                "env": "jest"
            }
        ],
        "rules": {
            "capitalized-comments": "off",
            "camelcase": "off",
            "indent": "off",
            "unicorn/filename-case": "off",
            "prettier/prettier": "off"
        },
        "space": true
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "dependencies": {
        "@actions/core": "^1.2.6",
        "execa": "^4.1.0",
        "lodash": "^4.17.20"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/commit-analyzer": "^8.0.1",
        "@semantic-release/exec": "^5.0.0",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/release-notes-generator": "^9.0.1",
        "@zeit/ncc": "^0.22.3",
        "husky": "^4.3.5",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "semantic-release": "^17.3.0",
        "sort-package-json": "^1.48.0",
        "xo": "^0.32.1"
    }
}
